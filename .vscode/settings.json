{
    "cmake.configureOnOpen": false,
    "C_Cpp.default.defines": ["GM_LINUX", "GM_WINDOW_XCB", "GM_WINDOW_WAYLAND"],
    "C_Cpp.default.includePath": [
        "${default}",
        "${VULKAN_SDK}/include",
        "${workspaceFolder}/libs/entt/single_include",
        "${workspaceFolder}/libs/spdlog/include",
        "${workspaceFolder}/libs/wayland-protocols",
        "${workspaceFolder}/src"
    ],
    "C_Cpp.autocompleteAddParentheses": true,
    "files.associations": {
        "array": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "span": "cpp"
    }
}